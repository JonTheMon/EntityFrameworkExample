@{
    // ViewBag.Title = "Home Page";
}
@model IEnumerable<EntityFrameworkExample.Models.Contact>

@{
   ViewBag.Title = "Contacts";
   ViewBag.PageClass = "contact-page";
}

<a asp-controller="Contact" asp-action="Create">Create New</a>

<div id="contactListContainer" class="list-container">
   <table id="taskList" class="record-list ajax-list">
      <thead>
         <tr>
            <th>Id</th>
            <th>Full Name</th>
            <th></th>
         </tr>
      </thead>
      <tbody>
         @foreach (EntityFrameworkExample.Models.Contact item in Model)
         {
            <tr>
               <td>@item.Id</td>
               <td>@item.FullName()</td>
               <td>
                  <a asp-action="Edit" asp-controller="Contact" asp-route-id="@item.Id">Edit</a>
               </td>
            </tr>
         }
      </tbody>
   </table>
</div>